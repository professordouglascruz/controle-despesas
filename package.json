{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Sistema de lançamento de despesas com categorias, estabelecimentos e lançamentos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seedData.js",
    "seed:force": "node src/database/seedData.js --force",
    "setup": "npm run migrate && npm run seed",
    "reset": "npm run migrate && npm run seed:force"
  },
  "keywords": ["expense", "tracker", "despesas", "categorias"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "@types/jest": "^29.5.5"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/migrations/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}